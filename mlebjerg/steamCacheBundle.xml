<?xml version="1.0"?>
<Container version="2">
  <Name>SteamCacheBundle</Name>
  <Repository>mlebjerg/steamcachebundle:latest</Repository>
  <Registry>https://hub.docker.com/r/mlebjerg/steamcachebundle/</Registry>
  <GitHub>https://steamcache.github.io/</GitHub>
  <Network>br0</Network>
  <MyIP>192.168.1.108</MyIP>
  <Privileged>false</Privileged>
  <Support>https://lime-technology.com/forums/topic/54183-support-cheesemarathons-repo/<Support/>
  <Project/>
  <Overview/>
  <Category/>
  <WebUI/>
  <TemplateURL>https://github.com/mlebjerg/dockerTemplates/raw/master/mlebjerg/steamCacheBundle.xml<TemplateURL/>
  <Icon>https://github.com/mlebjerg/dockerTemplates/raw/master/images/steamcache.png<Icon/>
  <ExtraParams/>
  <PostArgs/>
  <DateInstalled>1529067166</DateInstalled>
  <DonateText>Buy Me a Coffee</DonateText>
    <DonateLink>https://ko-fi.com/O5O7EZ1R</DonateLink>
	<DonateImg>https://az743702.vo.msecnd.net/cdn/kofi4.png?v=0</DonateImg>
  <MinVer/>
  <Description>
	SteamcacheBundle provides DNS entries for *.cs.steampowered.com and other download URLs and has GenericCache server and SNIProxy in the same container
	Please see https://squishedmooo.com/?p=1 for install instructions! You will need them!
	To see accesslogs type "tail -f /data/logs/access.log" (Without quotes) in the docker console.
	</Description>
  <Networking>
    <Mode>br0</Mode>
    <Publish>
      <Port>
        <HostPort>80</HostPort>
        <ContainerPort/>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>443</HostPort>
        <ContainerPort/>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>53</HostPort>
        <ContainerPort/>
        <Protocol>udp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/steamcache/data</HostDir>
      <ContainerDir>/data/cache</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/steamcachebundle/logs</HostDir>
      <ContainerDir>/data/logs</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>192.168.1.108</Value>
      <Name>LANCACHE_IP</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>500m</Value>
      <Name>CACHE_MEM_SIZE</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>2000g</Value>
      <Name>CACHE_DISK_SIZE</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>150d</Value>
      <Name>CACHE_MAX_AGE</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>1.1.1.1</Value>
      <Name>UPSTREAM_DNS</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>true</Value>
      <Name>USE_GENERIC_CACHE</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Config Name="LANCACHE_IP" Target="LANCACHE_IP" Default="" Mode="" Description="Container Variable: LANCACHE_IP (Has to be the same as the HOST's IP. If you set the container's IP to 192.168.1.108 this has to be the same. If you use bridge it has to be the same as unRAID's IP.)" Type="Variable" Display="always" Required="false" Mask="false">192.168.1.108</Config>
  <Config Name="Data" Target="/data/cache" Default="/mnt/user/steamcache/data" Mode="rw" Description="Container Path: /data/cache. This is where the data is cached." Type="Path" Display="always" Required="false" Mask="false">/mnt/user/appdata/gathered-cache/data</Config>
  <Config Name="Logs" Target="/data/logs" Default="/mnt/user/appdata/gathered-cache/logs" Mode="rw" Description="Container Path: /data/logs" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/appdata/gathered-cache/logs</Config>
  <Config Name="Default Port" Target="" Default="80" Mode="tcp" Description="Must be 80!" Type="Port" Display="always" Required="false" Mask="false">80</Config>
  <Config Name="CACHE_MEM_SIZE" Target="CACHE_MEM_SIZE" Default="" Mode="" Description="Container Variable: CACHE_MEM_SIZE" Type="Variable" Display="always" Required="false" Mask="false">5000m</Config>
  <Config Name="CACHE_DISK_SIZE" Target="CACHE_DISK_SIZE" Default="" Mode="" Description="Container Variable: CACHE_DISK_SIZE" Type="Variable" Display="always" Required="false" Mask="false">2000g</Config>
  <Config Name="CACHE_MAX_AGE" Target="CACHE_MAX_AGE" Default="" Mode="" Description="Container Variable: CACHE_MAX_AGE" Type="Variable" Display="always" Required="false" Mask="false">150d</Config>
  <Config Name="443" Target="" Default="443" Mode="tcp" Description="Container Port: 443 MUST BE 443 (Its for SNIProxy) " Type="Port" Display="always" Required="false" Mask="false">443</Config>
  <Config Name="DNS UDP Port" Target="" Default="53" Mode="udp" Description="Container Port: 53/ UDP MUST BE 53! (It's for Bind9) " Type="Port" Display="always" Required="false" Mask="false">53</Config>
  <Config Name="UPSTREAM_DNS" Target="UPSTREAM_DNS" Default="" Mode="" Description="Container Variable: UPSTREAM_DNS" Type="Variable" Display="always" Required="false" Mask="false">1.1.1.1</Config>
  <Config Name="USE_GENERIC_CACHE" Target="USE_GENERIC_CACHE" Default="" Mode="" Description="Container Variable: USE_GENERIC_CACHE" Type="Variable" Display="always" Required="false" Mask="false">true</Config>
</Container>